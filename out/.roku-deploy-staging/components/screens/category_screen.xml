    <field
      id="category_selected"
      type="assocArray"
      alias="category_list.buttonSelected"
    />
    <function name="updateConfig" />
  </interface>
  <children>
  <LayoutGroup
      translation="[100, 200]"
      itemSpacings="[20]"
      layoutDirection="horiz"
      vertAlignment="center"
    >
    <Label id="env" font="font:LargeBoldSystemFont" text="PICK A CATEGORY:" />

    <ButtonGroup layoutDirection="horiz" id="category_list" />
    <!-- <LabelList id="category_list" vertFocusAnimationStyle="fixedFocus" /> -->
  </LayoutGroup>
  </children>
</component>
