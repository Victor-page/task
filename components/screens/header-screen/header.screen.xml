<?xml version="1.0" encoding="utf-8" ?>
<component name="HeaderScreen" extends="Group">
  <script type="text/brightscript" uri="./header.screen.brs" />
  <interface>
    <field
      id="pageSelected"
      type="assocArray"
      alias="headerList.itemSelected"
    />
  </interface>
  <children>
     <Label
      translation="[75, 150]"
      id="env"
      font="font:LargeBoldSystemFont"
      text="PICK A CATEGORY:"
    />
    <RadioButtonList
      id="headerList"
      translation="[100, 200]"
      itemSize="[500, 48]"
    >
      <ContentNode id="pages" role="content">
        <PageButtonNode
          title="Home"
          urlToMakeQuery="https://api.themoviedb.org/3/trending/movie/week?api_key=04333487fae6801ae7461c72fe9ea316"
          id="movieListScreen"
        />
        <PageButtonNode title="Movies" id="searchForMoviesScreen" />
      </ContentNode>
    </RadioButtonList>
  </children>
</component>
