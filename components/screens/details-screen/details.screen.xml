<?xml version="1.0" encoding="utf-8" ?>
<component name="DetailsScreen" extends="Group">
	<interface>
 		<field
      id="content"
      type="node"
      alwaysnotify="true"
      onChange="onContentChange"
    />
		<field
      id="playButtonPressed"
      type="int"
      alwaysnotify="true"
      alias="playButton.buttonSelected"
    />
    <field id="fetchMovieDetails" type="int" />
    <field
      id="movieDetails"
      type="assocarray"
      onChange="onMovieDetailsChanged"
    />
 	</interface>
	<script type="text/brightscript" uri="./details.screen.brs" />
	<children>
    <Poster id="thumbnail" width="500" height="280" translation="[100, 100]" />
    <Button id="playButton" text="PLAY" translation="[100, 500]" />
    <Label
      id="title"
      font="font:LargeBoldSystemFont"
      color="0xFFFFFF"
      text=""
      translation="[700, 100]"
    />
    <Label
      id="description"
      height="1000"
      font="font:MediumSystemFont"
      color="0xFFFFFF"
      wrap="true"
      width="1000"
      text=""
      translation="[700, 200]"
    />
    <Label
      font="font:LargeBoldSystemFont"
      color="0xFFFFFF"
      wrap="true"
      width="200"
      text="Genres"
      translation="[700, 550]"
    />
    <LayoutGroup
      id="genresList"
      translation="[700, 650]"
      itemSpacings="[20]"
      layoutDirection="horiz"
    />
    <Label
      font="font:LargeBoldSystemFont"
      color="0xFFFFFF"
      wrap="true"
      width="800"
      text="Additional Information"
      translation="[700, 750]"
    />

 	</children>
</component>
